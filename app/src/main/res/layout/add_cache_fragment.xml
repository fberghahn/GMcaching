<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".AddCacheFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_padding"
            android:fontFamily="sans-serif-light"
            android:hint="@string/hint_name"
            android:inputType="textAutoComplete"
            android:minHeight="@dimen/min_height"
            android:textSize="18sp"
            android:importantForAutofill="no" />

    <TextView
        android:id="@+id/edit_koordinaten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:fontFamily="sans-serif-light"
        android:text="@string/hint_koordinaten"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/big_padding">

        <TextView
            android:id="@+id/info_Standardbild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:fontFamily="sans-serif-black"
            android:minHeight="0dp"
            android:text="@string/standardbild"
            android:textSize="18sp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        <ImageView
            android:id="@+id/userImageView"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/image1"
            tools:srcCompat="@drawable/image1"></ImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/small_padding"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/button_camera"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:minWidth="32dp"
                    android:minHeight="48dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_camera_alt_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    tools:srcCompat="@drawable/ic_baseline_camera_alt_24" />

                <ImageButton
                    android:id="@+id/button_gallery"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:minWidth="32dp"
                    android:minHeight="48dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_image_24"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    tools:srcCompat="@drawable/ic_baseline_image_24" />


            </LinearLayout>


    </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/button_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/big_padding"
        android:background="@color/emerald_green"
        android:text="@string/button_save"
        android:textColor="@color/buttonLabel" />
    </LinearLayout>

